@using Achmea.Core;
@model ProjectDetailViewModel
@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/Details.css" />
<h1>Details</h1>
<div class="con-header">
    <div class="header-title">
        <h2>@Model.Title</h2>
    </div>
    <div class="header-desc">
        <h3>@Model.Description</h3>
    </div>
</div>
<div class="con-content">
    @{ int i = 0;}
    @foreach (SecurityRequirementProject req in Model.RequirementProject)
    {
        <div class="con-requirements">
            <div class="requirement-info">
                <h4>@Model.Requirements.Where(requirement => requirement.RequirementId == req.SecurityRequirementId).SingleOrDefault().Name</h4>
            </div>
            <div class="requirement-check">
                <h4>@req.Status</h4>
            </div>
        </div>
        i++;
    }
</div>