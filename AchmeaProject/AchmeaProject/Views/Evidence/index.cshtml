@model DriveViewModel;
@{
                <link rel="stylesheet" href="~/css/ESA-checklist.css" />
                            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                                        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
                                                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}

@for (int i = 0; i < Model.list.Files.Count; i++)
{
<h2>@Model.list.Files[i].Name</h2>}


<form asp-action="Index" asp-controller="Evidence" enctype="multipart/form-data">
    <div class="file-field input-field">
        <div class="btn">
            <span>Select a File</span>
            <input type="file" id="file" name="file" accept=".doc,.docx,.pdf">
        </div>
        @*<div class="file-path-wrapper">
            <input class="file-path validate" type="text">
        </div>*@
    </div>
    <button type="submit"></button>
</form>
