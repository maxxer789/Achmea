@model List<ProjectViewModel>
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Overview.css" />
<h1>Overview</h1>
<table>
    <thead>
        <tr class="table-header">
            <th>Title</th>
            <th>Status</th>
            <th>Creation Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProjectViewModel P in Model)
        {
            <tr class="table-item" onclick="window.location.href='@Url.Action("Details", "Security", new { projectId = P.ProjectId})'">
                <th>@P.Title</th>
                <td>@P.Status</td>
                <td>@P.CreationDate</td>
            </tr>
        }
    </tbody>
</table>