@using Achmea.Core;
@model ProjectDetailViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Security/Details.css"/>
<div class="con-header">
    <div class="header-title">
        <h2>@Model.Title</h2>
    </div>
    
</div>
<div class="con-content">
    <div class="con-employee">
        @*<h3>@Model.Employee</h3>*@
        <h3>Employee's:</h3>
    </div>
    <div class="con-desc">
        <h4>Description:</h4>
        <h4>@Model.Description</h4>
    </div>
</div>

<div class="con-content">
    @{ int i = 0;}
    @foreach (SecurityRequirementProject req in Model.RequirementProject)
    {
    <div class="con-requirements">
        <div class="requirement-info">
            <h5>@Model.Requirements.Where(requirement => requirement.RequirementId == req.SecurityRequirementId).SingleOrDefault().Name</h5>
        </div>
        <div class="requirement-check">
            <h5>@req.Status</h5>
        </div>
    </div>
        i++;
    }
<div class="con-file">
    <h5>Download File</h5>
</div>
</div>