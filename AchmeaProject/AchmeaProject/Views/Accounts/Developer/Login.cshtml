@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Login";
}
@model AchmeaProject.Models.LoginViewModel


<head>
    <style>
        .login {
            width: 100%;
            max-width: 420px;
            padding: 10px;
            margin: auto;
        }

        .button {
            background-color: #D29FA5;
            cursor: pointer;
            border-color: #D29FA5;
            border-radius: 7px;
        }

            .button:hover, .active {
                background-color: #D18189;
            }
    </style>
</head>

<body>
    <div class="login">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-label-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" required="" autofocus="" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-label-group">
                    <label asp-for="Password">Wachtwoord</label>
                    <input asp-for="Password" class="form-control" placeholder="Wachtwoord" required="" autofocus="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <hr />

                <div class="button">

                    <button class="btn btn-lg btn-primary btn-block button" type="submit">Log In</button>

                </div>
            </form>
        </section>
    </div>
</body>